pipeline {
    agent { node { label 'master' } }
    stages {
        stage('After Checkout') {
            steps {
                script {
                    accountId = '123456789012'
                    ACCOUNT_ID = "$accountId"
                    accountName = 'NonProd'
                    ACCOUNT_NAME = "$accountName"
                    kmsKey = 'arn:1234'
                    KMS_KEY ="$kmsKey"
                }
                echo "${username}"
            }
        }
    post {
        always {
          mail(
          to: 'israrul.haque@edfenergy.com, avinashkumar.gupta@edfenergy.com',
          subject: "Account Creation Details",
          body: "The account creation details are mentioned below: \n
                Account Id: ${ACCOUNT_ID} 
                Account Name: ${ACCOUNT_NAME} \n
                KMS Key: ${KMS_KEY}"
          )
        }
      }
    }
}
